<h1>Display your Pirate here</h1>
<p><%= @pirate.name %></p>
<p><%= @pirate.weight %></p>
<p><%= @pirate.height %></p>


<% @ships.each do |s| %>
<h2>Displaying your <%= @ships.index(s)+1 %> ship here</h2>
<p>Name: <%= s.name %></p><br>
<p>Type: <%= s.type %></p><br>
<p>Booty: <%= s.booty %></p><br>
<% end %>